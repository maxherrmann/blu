{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/recommended",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmitOnError": true,
		"outDir": "build",
		"strict": true,
		"target": "ES2019",
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*.ts"]
}
