{
	"name": "@blu.js/blu",
	"version": "2.5.0",
	"description": "The type-safe framework for interacting with Bluetooth Low Energy devices from the web.",
	"keywords": [
		"blu",
		"web bluetooth",
		"bluetooth low energy",
		"bluetooth",
		"framework"
	],
	"license": "MIT",
	"homepage": "https://github.com/maxherrmann/blu#readme",
	"bugs": "https://github.com/maxherrmann/blu/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/maxherrmann/blu"
	},
	"author": {
		"name": "Max Herrmann",
		"email": "blu@max-herrmann.com",
		"url": "https://github.com/maxherrmann"
	},
	"funding": "https://github.com/sponsors/maxherrmann",
	"type": "module",
	"main": "./dist/blu.min.js",
	"types": "./dist/blu.d.ts",
	"scripts": {
		"start": "webpack serve --mode production --name playground --progress",
		"dev": "webpack serve --mode development --name playground --progress",
		"build": "sh build.sh",
		"build:playground": "webpack --mode production --name playground --progress",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"update": "ncu -i && git add package*.json && git commit -m \"Update dependencies\"",
		"update:auto": "ncu -u -t semver --dep prod && ncu -u --dep dev && git add package*.json && git commit -m \"Update dependencies\""
	},
	"devDependencies": {
		"@microsoft/api-documenter": "^7.23.20",
		"@microsoft/api-extractor": "^7.39.4",
		"@microsoft/tsdoc-config": "^0.16.2",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"css-loader": "^6.9.1",
		"css-minimizer-webpack-plugin": "^6.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"html-bundler-webpack-plugin": "^3.4.11",
		"npm-check-updates": "^16.14.14",
		"prettier": "^3.2.4",
		"terser-webpack-plugin": "^5.3.10",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.3",
		"webpack": "^5.90.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1",
		"zod": "^3.22.4"
	},
	"dependencies": {
		"@types/web-bluetooth": "^0.0.20",
		"typed-emitter": "^2.1.0"
	}
}
